#!/bin/sh

if xrandr --listactivemonitors | grep "DisplayPort-1"; then
    xrandr --output eDP --off --output HDMI-A-0 --off --output DisplayPort-0 --off --output DisplayPort-1 --primary --mode 2560x1440 --pos 0x0 --rotate normal --output DisplayPort-2 --off --output DisplayPort-3 --off
elif xrandr --listactivemonitors | grep "DisplayPort-2"; then
    xrandr --output eDP --off --output HDMI-A-0 --off --output DisplayPort-0 --off --output DisplayPort-2 --primary --mode 2560x1440 --pos 0x0 --rotate normal --output DisplayPort-1 --off --output DisplayPort-3 --off
fi

