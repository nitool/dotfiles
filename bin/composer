#!/bin/bash

name='local_php74'

docker container start $name &>/dev/null || docker container run \
    -v /home/$USER:/home/$USER \
    -v /usr/local/bin/phpactor:/usr/local/bin/phpactor \
    -d -u $USER \
    --name $name \
    local_php74 tail -f /dev/null &>/dev/null

docker container exec \
    -i \
    -u $USER \
    -w $(pwd) $name composer "$@"

